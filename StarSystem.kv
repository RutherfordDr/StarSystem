<Manager>:
    id: screen_manager

    MenuScreen:
        id: menu_screen
        name: 'home'
        manager: 'screen_manager'
        RelativeLayout:
            Button:
                text: 'Enter FreePlay'
                halign: 'center'
                valign: 'middle'
                font_size: 20
                text_size: self.size
                on_release: root.current = 'game';game.starting_conditions()
                size: 200, 100
                size_hint: None, None
                center: self.parent.center

    FreePlayScreen:
        id: free_play_screen
        control: control
        name: 'game'
        manager: 'screen_manager'
        StarSystemGame:
            id: game
        BoxLayout:
            id: control
            Button:
                id: button_add
                text: 'Add Star'
                halign: 'center'
                valign: 'middle'
                font_size: 20
                text_size: self.size
                on_release: game.create_star()
                size: self.parent.width / 3, 50
                size_hint: None, None
            Button:
                id: button_adjust_time
                text: 'Adjust time'
                halign: 'center'
                valign: 'middle'
                font_size: 20
                text_size: self.size
                on_release: game.adjust_time()
                size: self.parent.width / 3, 50
                size_hint: None, None
            Button:
                id: button_remove
                text: 'Remove Star'
                halign: 'center'
                valign: 'middle'
                font_size: 20
                text_size: self.size
                on_release: game.remove_star()
                size: self.parent.width / 3, 50
                size_hint: None, None


<MenuScreen>

<FreePlayScreen>


<Star>:
    size: 25, 25
    canvas:
        Color:
            rgb: (1,1,1)
        Ellipse:
            pos: self.pos
            size: self.size


<StarSystemGame>:
    star0: star_0
    star1: star_1



    canvas:
        Color:
            rgb: (1,1,1)


    Star:
        id: star_0


    Star:
        id: star_1





