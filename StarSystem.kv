<Manager>:
    id: screen_manager

    Screen:
        name: 'home'
        Button:
            text: 'Enter FreePlay'
            halign: 'center'
            valign: 'middle'
            font_size: 20
            text_size: self.size
            on_release: root.current = 'game';game.starting_conditions()
            size: 200, 100
            size_hint: None, None
            center: root.center


    Screen:
        name: 'game'
        StarSystemGame:
            id: game
        Button:
            text: 'Add Star'
            halign: 'center'
            valign: 'middle'
            font_size: 12
            text_size: self.size
            size: 100, 50
            size_hint: None, None


<Star>:
    size: 25, 25
    canvas:
        Color:
            rgb: (1,1,1)
        Ellipse:
            pos: self.pos
            size: self.size


<StarSystemGame>:
    star0: star_0
    star1: star_1

    canvas:
        Color:
            rgb: (1,1,1)

    Star:
        id: star_0
        x: self.parent.width / 3
        y: self.parent.height / 2

    Star:
        id: star_1
        x: self.parent.width * 2 / 3
        y: self.parent.height / 2

